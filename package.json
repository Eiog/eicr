{
  "name": "eicr",
  "type": "module",
  "version": "0.0.1-beta.1",
  "packageManager": "pnpm@7.18.0",
  "description": "Eicr-多项目快速开始模板 by<https://github.com/Eiog>",
  "author": "Eiog",
  "license": "MIT",
  "homepage": "https://github.com/Eiog/eicr",
  "repository": {
    "type": "git",
    "url": "git@github.com:Eiog/eicr.git"
  },
  "bugs": "https://github.com/Eiog/eicr/issues",
  "keywords": [
    "eicr"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "eicr": "./dist/index.js"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "dev:unbuild": "unbuild --stub",
    "build": "tsc --noEmit && tsup",
    "build:unbuild": "tsc --noEmit && unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "update:deps": "taze -w && pnpm i",
    "type:check": "tsc --noEmit",
    "cz": "czg",
    "commit": "git pull && git add -A && pnpm cz && git push",
    "link": "pnpm link --global",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "clear-console": "^1.1.0",
    "commander": "^12.0.0",
    "download-git-repo": "^3.0.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.15",
    "node-fetch": "^3.3.2",
    "ora": "^8.0.1",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@eiog/eslint-config-ts": "^0.0.2",
    "@eiog/ts-config": "^0.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.25",
    "@vitest/ui": "^1.3.1",
    "bumpp": "^9.4.0",
    "commitlint": "^19.0.3",
    "cz-git": "^1.9.0",
    "czg": "^1.9.0",
    "eslint": "^8.57.0",
    "esno": "^4.7.0",
    "glob": "^10.3.10",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.10.0",
    "taze": "^0.13.3",
    "tsup": "8.0.2",
    "typescript": "^5.4.2",
    "unbuild": "^2.0.0",
    "vitest": "^1.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm type:check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  }
}
